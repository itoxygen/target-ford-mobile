<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="44dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView android:text="Scenario Check Interval" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:paddingTop="30dp" />

    <com.appyvet.rangebar.RangeBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rangebar_interval"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        custom:rangeBar="false"
        custom:tickColor="#CCCCCC"
        custom:rangeBarColor="#CCCCCC"
        custom:pinMaxFont="10dp"
        custom:connectingLineColor="#f44336"
        custom:selectorColor="#d32f2f"
        custom:pinColor="#d32f2f"
        custom:tickEnd="25"
        custom:tickInterval="5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <TextView android:text="Max Store Distance" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:paddingTop="30dp" />

    <com.appyvet.rangebar.RangeBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rangebar_store_distance"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        custom:rangeBar="false"
        custom:tickColor="#CCCCCC"
        custom:rangeBarColor="#CCCCCC"
        custom:pinMaxFont="10dp"
        custom:connectingLineColor="#f44336"
        custom:selectorColor="#d32f2f"
        custom:pinColor="#d32f2f"
        custom:tickStart="10"
        custom:tickEnd="50"
        custom:tickInterval="10"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


</LinearLayout>